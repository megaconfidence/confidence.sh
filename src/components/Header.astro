---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header transition:animate="none">
	<div class="header-inner">
		<a class="site-title" href="/">{SITE_TITLE}</a>
		<button class="menu-toggle" aria-label="Toggle navigation" aria-expanded="false" type="button">
			<svg class="icon-menu" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" y1="6" x2="20" y2="6"/><line x1="4" y1="12" x2="20" y2="12"/><line x1="4" y1="18" x2="20" y2="18"/></svg>
			<svg class="icon-close" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
		</button>
		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<a href="https://www.youtube.com/@megaconfidence" target="_blank" rel="noopener">Videos</a>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/talks">Talks</HeaderLink>
			<HeaderLink href="/uses">Uses</HeaderLink>
		</div>
	</div>
</header>

<script>
	document.addEventListener('astro:page-load', () => {
		const btn = document.querySelector('.menu-toggle') as HTMLButtonElement | null;
		const nav = document.querySelector('.nav-links') as HTMLElement | null;
		if (btn && nav) {
			const iconMenu = btn.querySelector('.icon-menu') as SVGElement | null;
			const iconClose = btn.querySelector('.icon-close') as SVGElement | null;
			btn.addEventListener('click', () => {
				const isOpen = nav.classList.toggle('open');
				btn.setAttribute('aria-expanded', String(isOpen));
				if (iconMenu) iconMenu.style.display = isOpen ? 'none' : '';
				if (iconClose) iconClose.style.display = isOpen ? '' : 'none';
			});
		}
	});
</script>

<style>
	header {
		background-color: var(--bg);
		border-bottom: 1px solid var(--border);
		position: sticky;
		top: 0;
		z-index: 50;
		transition: background-color 0.15s ease, border-color 0.15s ease;
	}
	.header-inner {
		max-width: 48rem;
		margin: 0 auto;
		padding: 0 1.5em;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	.site-title {
		font-weight: 700;
		font-size: 1.1em;
		color: var(--text);
		text-decoration: none;
		padding: 1em 0;
		transition: color 0.15s ease;
	}
	.site-title:hover {
		color: var(--accent);
	}
	.menu-toggle {
		display: none;
		background: none;
		border: none;
		color: var(--text-muted);
		cursor: pointer;
		padding: 0.5em;
		border-radius: 6px;
		transition: color 0.15s ease, background-color 0.15s ease;
	}
	.menu-toggle:hover {
		color: var(--text);
		background-color: var(--bg-secondary);
	}
	.icon-close {
		display: none;
	}
	.nav-links {
		display: flex;
		align-items: center;
		gap: 0.125em;
	}
	.nav-links :global(a) {
		padding: 0.5em 0.75em;
		color: var(--text-muted);
		text-decoration: none;
		font-weight: 500;
		font-size: 0.95em;
		border-radius: 6px;
		transition: color 0.15s ease, background-color 0.15s ease;
		display: inline-block;
	}
	.nav-links :global(a:hover) {
		color: var(--text);
		background-color: var(--bg-secondary);
	}
	.nav-links :global(a.active) {
		color: var(--accent);
		font-weight: 600;
	}

	@media (max-width: 640px) {
		.menu-toggle {
			display: flex;
			align-items: center;
		}
		.nav-links {
			display: none;
			flex-direction: column;
			align-items: stretch;
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background-color: var(--bg);
			border-bottom: 1px solid var(--border);
			padding: 0.5em 1.5em 1em;
		}
		.nav-links.open {
			display: flex;
		}
		.nav-links :global(a) {
			width: 100%;
			padding: 0.6em 0.75em;
		}
	}
</style>
